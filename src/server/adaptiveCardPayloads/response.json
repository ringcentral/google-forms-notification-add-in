{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "text": "New response at [${formTitle}](${formUrl})"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Container",
                    "$data": "${answers}",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${question}",
                            "size": "Small",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${answer}",
                            "weight": "Default"
                        }
                    ]
                }
            ],
            "separator": true
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "View Response",
            "url": "${responseUrl}",
            "style": "positive"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}